<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:visibility="gone"
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This device doesn't have\nmagnetic sensor"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/cmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Calibrated magnetic field"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/tcmf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tcmf"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/tcmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="Theoretically calibrated magnetic field"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/cmf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/umf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Uncalibrated magnetic field"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/tcmf"
        app:layout_constraintEnd_toStartOf="@+id/tcmf"
        app:layout_constraintTop_toTopOf="@+id/tcmf"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/x"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="x"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tcmf"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/x_cmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/x"
        app:layout_constraintStart_toEndOf="@+id/x_tcmf"
        app:layout_constraintTop_toTopOf="@+id/x"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/x_tcmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/x"
        app:layout_constraintStart_toEndOf="@+id/x_umf"
        app:layout_constraintTop_toTopOf="@+id/x"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/x_umf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/x"
        app:layout_constraintStart_toEndOf="@+id/x"
        app:layout_constraintTop_toTopOf="@+id/x"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/y"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="y"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/y_cmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/y"
        app:layout_constraintStart_toEndOf="@+id/x_tcmf"
        app:layout_constraintTop_toTopOf="@+id/y"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/y_tcmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/y"
        app:layout_constraintStart_toEndOf="@+id/x_umf"
        app:layout_constraintTop_toTopOf="@+id/y"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/y_umf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/y"
        app:layout_constraintStart_toEndOf="@+id/y"
        app:layout_constraintTop_toTopOf="@+id/y"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/z"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="z"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/z_cmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/z"
        app:layout_constraintStart_toEndOf="@+id/x_tcmf"
        app:layout_constraintTop_toTopOf="@+id/z"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/z_tcmf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/z"
        app:layout_constraintStart_toEndOf="@+id/x_umf"
        app:layout_constraintTop_toTopOf="@+id/z"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

    <TextView
        android:id="@+id/z_umf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/z"
        app:layout_constraintStart_toEndOf="@+id/z"
        app:layout_constraintTop_toTopOf="@+id/z"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />

</android.support.constraint.ConstraintLayout>
